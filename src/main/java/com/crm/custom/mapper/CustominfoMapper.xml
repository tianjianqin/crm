                startDate = #{startdate},
            </if>
            <if test="lastfollowdate != null">
                lastFollowDate = #{lastfollowdate},
            </if>
            <if test="plandate != null">
                planDate = #{plandate},
            </if>
            <if test="mark != null and mark !=''">
                mark = #{mark,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

