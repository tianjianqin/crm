    <sql id="Base_Column_List">
        id, customId, followManId, statu, startDate, lastFollowDate, planDate, mark
    </sql>

    <insert id="saveBatch" parameterType="com.crm.custom.domain.Custominfo">
        insert into custominfo(id, customId, followManId,
        statu, startDate, lastFollowDate,
        planDate, mark) VALUES
        <foreach collection="list" item="custominfo"  separator=",">
            (#{custominfo.id}, #{custominfo.customid}, #{custominfo.followmanid},
            #{custominfo.statu}, #{custominfo.startdate}, #{custominfo.lastfollowdate},
            #{custominfo.plandate}, #{custominfo.mark})
        </foreach>
    </insert>

    <select id="queryList" resultType="com.crm.custom.domain.Custominfo">
        SELECT i.id as id,i.customId as customId,c.`name` as name,i.followManId as followManId,e.realname AS followman,i.statu as statu,
        i.startDate as startDate,i.lastFollowDate as lastFollowDate,i.planDate as planDate,i.mark as mark
        FROM custominfo i
        LEFT JOIN custom c on i.customId=c.id
        LEFT JOIN employee e on i.followManId=e.id
        <where>
            <if test="followmanid != null">
                and followManId = #{followmanid}
            </if>
            <if test="departmentid != null">
                and e.departmentId = #{departmentid}
            </if>
            <if test="name != null and name.trim() != ''">
                and name like CONCAT('%', #{name}, '%')
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(DISTINCT i.id)
        FROM custominfo i
        LEFT JOIN custom c on i.customId=c.id
        LEFT JOIN employee e on i.followManId=e.id
        <where>
            <if test="followmanid != null">
                and followManId = #{followmanid}
            </if>
            <if test="departmentid != null">
                and e.departmentId = #{departmentid}
            </if>
            <if test="name != null and name.trim() != ''">
                and name like CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>

    <update id="update" parameterType="com.crm.custom.domain.Custominfo">
        update custominfo
